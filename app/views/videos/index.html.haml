- @categories.each do |category|
  %header
    %h3#category-header= link_to category.name, category_path(category)
    %hr
  %article.video_category
    .videos.row
      - category.recent_videos.each do |video|
        .video.col-sm-2
          = link_to video_path(video) do
            .crop  
              %img(src="#{video.small_cover_url}" class="img-responsive img-thumbnail")


