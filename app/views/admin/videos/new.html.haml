%section.admin_add_video
  .container
    .row
      .col-md-8.col-md-offset-2
        = bootstrap_form_for([:admin, @video], layout: :default) do |f|
          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            = f.text_field :title
            = f.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] })
            = f.text_area :description, rows: 6
            = f.file_field :large_cover, label: "Large Cover Image", class: "btn btn-default"
            = f.file_field :small_cover, label: "Small Cover Image", class: "btn btn-default"
            = f.text_field :video_url, label: "Video URL"
            = f.form_group do
              = f.submit "Add Video", class: "btn btn-success btn-block"
